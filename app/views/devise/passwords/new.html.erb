<% content_for :title, t(".title") %>
<h2><%= t(".title") %></h2>
<p><%= t('.text') %></p>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-password', method: :post}) do |f| %>
  <%= f.label :email, t('.email'), class: 'sr-only' %>
  <%= f.text_field :email, type: "email", class: "form-control", placeholder: t('.email'), required: true, autofocus: true %>

  <%= button_tag t(".submit"), class: "btn btn-lg btn-block btn-primary", type: "submit" %>
<% end %>
