<div class="form-group<% unless f.object.errors[:title].blank?%> has-error<% end %>">
  <div class="col-sm-12">
    <%= f.text_field :title, type: 'title', class: 'form-control input-lg', placeholder: t('.title_placeholder'), required: true %>
  </div>
</div>
<div class="form-group<% unless f.object.errors[:body].blank? %> has-error<% end %>">
  <div class="col-sm-12">
    <%= f.cktext_area :body, :class => 'form-control', :ckeditor => {:language => 'es'} %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <hr class="divider" />
  </div>
</div>
<div class="form-group<% unless f.object.errors[:slug].blank?%> has-error<% end %>">
  <%= f.label :slug, t('.slug'), class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :slug, type: 'text', class: 'form-control', placeholder: t('.slug_placeholder') %>
    <p class="help-block"><%= t('.slug_help') %></p>
  </div>
</div>
<div class="form-group<% unless f.object.errors[:order].blank?%> has-error<% end %>">
  <%= f.label :order, t('.order'), class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :order, type: 'number', class: 'form-control', placeholder: t('.order_placeholder'), step: "1" %>
  </div>
</div>
<div class="form-group<% unless f.object.errors[:draft].blank?%> has-error<% end %>">
  <%= f.label :draft, t('.draft'), class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :draft, options_for_select([[t('.draft_true'), true], [t('.draft_false'), false]]), {}, class: "form-control" %>
  </div>
</div>
<div class="form-group<% unless f.object.errors[:show_in_menu].blank?%> has-error<% end %>">
  <%= f.label :show_in_menu, t('.show_in_menu'), class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.select :show_in_menu, options_for_select([[t('.show_in_menu_true'), true], [t('.show_in_menu_false'), false]]), {}, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to t(".back"), url_for(action: :index), class: "btn btn-default pull-left" %>
    <%= button_tag "#{t(".submit")}&nbsp;&nbsp;<i class='fa fa-chevron-right'></i>".html_safe, type: "submit", class: "btn btn-primary pull-right" %>
  </div>
</div>
