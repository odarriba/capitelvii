<% content_for :title, t(".title") %>
<div class="page-header">
  <h1><%= t(".title") %> <small><%= t(".subtitle", email: Page.pluck(:title).find(@page.id).first) %></small></h1>
</div>

<%= form_for @page, url: {action: "update"}, html: {class: "form-horizontal"} do |f| %>
<%= render partial: 'form', locals: { f: f } %>
<% end %>
