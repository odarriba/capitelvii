<% content_for :title, t(".title") %>
<div class="page-header">
  <h1><%= t(".title") %> <small><%= t(".subtitle") %></small></h1>
</div>
<div class="form-horizontal">
  <div class="form-group">
    <%= label_tag :name, t('.name'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @contact_request.name %></p>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :email, t('.email'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @contact_request.email %></p>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :phone, t('.phone'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @contact_request.phone %></p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <hr class="divider" />
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :body, t('.body'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @contact_request.body %></p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <hr class="divider" />
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :created_at, t('.created_at'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @contact_request.created_at.strftime("%d/%m/%Y - %H:%M") %></p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to t(".back"), url_for(action: :index), class: "btn btn-default pull-left" %>
    </div>
  </div>

</div>
